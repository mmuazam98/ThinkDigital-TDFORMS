<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TD-Forms | <%= name %> </title>
    <script>
      let ur = window.location.href;
      let path_name = new URL(ur).pathname;
      let form_ID = path_name.substr(6);
      let array = [];
      let retrieved_Data = localStorage.getItem("forms");
      array = JSON.parse(retrieved_Data);
      if (array.indexOf(form_ID) !== -1) window.location.href = "/error/filled";
    </script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/2344b9ab86.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/form.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.14.0/css/all.css" integrity="sha384-HzLeBuhoNPvSl5KYnjx0BT+WB0QEEqLprO+NBkkk5gbc67FTaL7XIGa2w1L0Xbgc" crossorigin="anonymous">
    <!-- <link rel="icon" href="images/Logo.png" type="image/ico" /> -->
  </head>
    <body>
      <input type="text" id="formID" value="<%= formID  %>" disabled style="display: none;">
      
      <div class="form-title-1"></div>
      <div class="form-title-2">
          <input type="text" class="transparentbox" value="<%=name%>" disabled id="form-title">
          <input type="text" class="transparentbox" id="lightinp" value="<%= description %> " disabled>
      </div>
    <br/>
    <br/>
<!-- not added: required, form name, form description, checkboxes -->
    <form class="a">
      <div class="main-form questionss">
        <% for( let i = 0; i < form.length; i++ ) { %>
          <% if(form[i].type=='short'){ %>
            <div class="question" >
                <div class="forhover">
                    <h5><input type="text" name="title" class="transparentbox question "  value="<%= (form)[i].title  %>" disabled ></h5>
                    <div class="ans">
                        <input type="text" class="form-control form-control-" data-id=<%= form[i].questionID %> aria-describedby="emailHelp" placeholder="Enter Your Answer Here" required>
                </div>
                </div>
                </div>
          <% } else if(form[i].type=='long'){%>
            <div class="question" >
                <div class="forhover">
                    <h5><input type="text"  name="title" class="transparentbox question" value="<%= (form)[i].title  %>" disabled></h5>
                    <div class="ans">
                        <textarea class="form-control form-control-" placeholder="Enter Your Answer Here" data-id=<%= form[i].questionID %> style="height: 100px" required></textarea>
                </div>
                </div>
                </div>
          <% } else if(form[i].type=='mcq'){%>
            <div class="question" >
                <div class="forhover">
                  <h5> <input type="text" name="title" class="transparentbox question" data-id=<%= form[i].questionID %>  value="<%= (form)[i].title  %>" disabled></h5>
                  <div class="ans">
                 <div class="options" >
                   <% if (typeof mcq !== 'undefined') { %>
                     <% for(let j=0;j<mcq.length;j++){%>
                     <% for(let k=0;k<mcq[j].length;k++){%>
                       <%if(mcq[j][k].questionID == form[i].questionID) {%>
                         <input type="radio" class="form-control-" data-type=<%= form[i].type %>  data-id=<%= mcq[j][k].questionID %> name="option<%=j%>"  value="<%= mcq[j][k].val %>" required>
                          <label for="option<%= j %>"><%= mcq[j][k].val %></label><br>
                       <% } %>
                     <% } %>
                    <% } %>
                   <% } %>
                  
                </div>
              </div>
              </div>
         </div>
          <% } %>
        <% } %>
      </div>
      
      <button type="submit" id="submit" class="btn btn-secondary btn-lg btn-block sub">Submit</button>
    </form>



      <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js" integrity="sha384-q2kxQ16AaE6UbzuKqyBE9/u/KzioAlnx2maXQHiDX9d4/zp8Ok3f+M7DPm+Ib6IU" crossorigin="anonymous"></script>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.min.js" integrity="sha384-pQQkAEnwaBkjpqZ8RU1fF1AKtTcHJwFl3pblpTlHXybJjHpMYo79HY3hIi4NKxyj" crossorigin="anonymous"></script>
      <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
      <script src="/js/response.js"></script>
      
    </body>
    </html>
